* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html ,
body {
  @apply text-black bg-white font-sans font-light;
}

a,
a:active,
a:focus,
a:visited {
  @apply no-underline;
  color: inherit;
}

a.underline {
  @apply no-underline border-black border-b-2;

  &.text-green-dark {
    @apply border-green-dark;
  }
}