h1 {
  @apply text-4xl;
}

h2 {
  @apply text-3xl;
}

h3 {
  @apply text-2xl;
}

h1, h2, h3 {
  @apply leading-tight font-normal;
}

p {
  @apply leading-normal;
  letter-spacing: 0.03em;
}


@screen lg {
  .text-hero {
    @apply text-6xl;
  }

  .text-xlarge {
    @apply text-5xl;
  } 

  .text-large {
    @apply text-4xl;
  } 

  .text-quote {
    @apply text-3xl;
  } 

  .text-title {
    @apply text-2xl;
  } 

  .text-body {
    @apply text-lg;
  } 
}