<footer class="section footer-main bg-green-dark text-white text-body">
  <div class="container">

    {% block footer %}

      <div class="row">

        <div class="col">

          <p class="mb-10">
            {{ global_contact.meta('address') }}
          </p>
          <p class="mb-10">
            <a href="tel:{{ global_contact.meta('phone') }}">{{ global_contact.meta('phone') }}</a><br>
            <a class="text-white underline" href="mailto:{{ global_contact.meta('email') }}">{{ global_contact.meta('email') }}</a>
          </p>
          <p class="text-base">
            &copy; 2019 MAG Architecten
          </p>

        </div>

      </div>

    {% endblock %}

  </div>
</footer>

</div>