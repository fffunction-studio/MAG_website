{# Sample page #}

{% extends "core/base.html.twig" %}

{% block main %}

  <section class="section header-offset">
    <div class="container pt-10 md:pt-20">
      <div class="row">
        <div class="col w-full lg:mx-1/12 lg:w-10/12">
          <h1 class="font-light text-xlarge mb-6 md:mb-20">
            Onze Projecten
          </h1>

          <div class="ajax-wrapper row flex-wrap">
            {% for project in projects %}
              {% set delay = 0 %}
              {% if loop.index0 is odd %}
                {% set delay = 200 %}
              {% endif %}

              <div class="col anim-move-in w-full md:w-1/2 mb-20" data-anim-delay="{{ delay }}">
                <a href="{{ project.link }}">

                  <div class="cursor-bekijk-wrapper">
                    {% if project.meta("use_quote") %}
                      <div class="quote-wrapper landscape-wide">
                        <div class="quote-content text-quote leading-tight p-8 flex items-start">
                          <blockquote>
                            {{ project.meta('quote') }}
                          </blockquote>
                        </div>
                      </div>

                    {% else %}
                      {% include "components/image.html.twig" with {
                        figure_class: 'landscape-wide',
                        image: project.meta('header').image
                      } %}
                    {% endif %}

                    <div class="cursor-bekijk text-body">
                      <span class="">bekijk</span>
                    </div>
                  </div>

                  <div class="mt-4">
                    <h3 class="text-title font-light">
                      <span class="underline">
                        {{ project.title }}
                      </span>
                    </h3>
                  </div>

                </a>
              </div>

            {% endfor %}

          </div>

        </div>
      </div>

      <div class="row">
        <div class="col w-full mb-6 lg:mx-1/12 lg:w-10/12 lg:mb-20">

          {% if projects.pagination.next %}
            <button class="ajax-load-more text-body font-light underline" data-ajax-wrapper="ajax-wrapper" data-ajax-url="{{ projects.pagination.next.link }}">
              Meer projecten laden
            </button>
          {% endif %}

        </div>
      </div>
    </div>
  </section>

{% endblock %}

{% block scripts %}{% endblock %}
