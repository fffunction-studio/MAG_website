{% if image is not defined %}

  <figure class="{{ figure_class|join(' ') }}">
    <img class="lazy" src="https://placehold.it/20x10" data-src="https://placehold.it/2000x1000" alt="placeholder">
  </figure>

{% else %}
  {% if size is not defined %}
    {% set size = "landscape" %}
  {% endif %}

  {% set lazyload = image | get_timber_image_responsive("landscape", {
    lazy_srcset: true,
    lazy_src: true
  }) %}
  {% set lazypreload = image | get_timber_image("lazy") %}

  <figure class="{{ figure_class|join(' ') }}">
    <img class="lazy" {{ lazypreload}} {{ lazyload }}>
  </figure>

{% endif %}
